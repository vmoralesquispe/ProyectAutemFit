<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Funcional_Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp">

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/loguito"
                android:layout_gravity="start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Funcional"
                android:textSize="30sp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_gravity="center"/>

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/configuracion"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="end"/>

        </LinearLayout>

        <Button
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:text="Principiante"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:text="Intermedio"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:text="Avanzado"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:text="Experto"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"/>


    </LinearLayout>

</LinearLayout>